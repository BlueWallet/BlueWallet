{
  "parser": "babel-eslint",
  "plugins": [
      "react", "prettier", "react-hooks"
  ],
  "extends": ["standard", "standard-react", "prettier"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    'prettier/prettier': [
      'warn',
      {
        singleQuote: true,
        printWidth: 140,
        trailingComma: 'all'
      }
    ]
  },
  "env":{
    "es6": true
  },
  "globals": { "fetch": false }
}
